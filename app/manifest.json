{
  "name": "Google News Reader",
  "description": "Read news",
  "version": "1",
  "default_locale": "en",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["javascripts/background.js"]
    }
  },
  "icons": {
    "128": "icon_128.png"
  },
  "offline_enabled": true,
  // "content_security_policy": "script-src 'self'; object-src 'self' https://nt3.ggpht.com",
  "permissions": [
    "unlimitedStorage",
    "notifications",
    "appWindow",
    "experimental",
    "http://nt3.ggpht.com/*",
    "http://news.google.com/*",
    "http://*/*"
  ]
}
